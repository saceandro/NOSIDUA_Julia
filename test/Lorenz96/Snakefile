rule experiment_bigarray_all:
    params:
        1
    input:
        'builddir/experiment_arguments'
    output:
        make_all_output_filenames_all(dirdic, config, paramsdic, arrayparam, "estimates.tsv")
    run:
        for shellcommand in bigarrayjob_run_all_hqw(dirdic, config, paramsdic, arrayparam, "bigarray_qsub_experiment.sh"):
            shell(shellcommand)

rule test_experiment_bigarray_all:
    run:
        print("shell command:")
        for item in bigarrayjob_run_all_hqw(dirdic, config, paramsdic, arrayparam, "bigarray_qsub_experiment.sh"):
            print(item)
        # subprocess.Popen(bigarrayjob_noqsub(dict(dirdic, **config), dict(paramsdic, **arrayparam), "bigarray_qsub_experiment.sh"), executable="/bin/zsh", shell=True, universal_newlines=True)

rule total:
    params:
        1
    input:
        make_all_output_filenames_all(dirdic, config, paramsdic, arrayparam, "estimates.tsv")
    output:
        totalnames(plotdir, config, paramsdic, variables)
    run:
        total(dirdic, plotdir, config, paramsdic, variables, "estimates.tsv")


