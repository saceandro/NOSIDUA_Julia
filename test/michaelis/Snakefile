include: "../../util/snakerules"

rule linuxbuild:
    params:
        mem="4G"
    input:
        'michaelis.jl',
        '../../util/experiment_ccompile.jl',
        '../../util/check_args.jl',
        '../../util/optparser.jl',
        '../../src/Adjoints.jl',
        '../../src/types.jl',
        '../../src/adjoint.jl',
        '../../src/assimilate.jl'
    output:
        'builddir/michaelis',
        'builddir/michaelis.so',
        'builddir/michaelis.o'
    shell:
        "julia ~/.julia/v0.6/PackageCompiler/juliac.jl -vae michaelis.jl"

rule macbuild:
    input:
